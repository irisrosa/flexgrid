    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.6",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^27.0.5",
