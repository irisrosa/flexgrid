{
  "name": "merengue",
  "version": "1.0.0",
  "module": "build/module.js",
  "types": "build/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "/build"
  ],
  "alias": {
    "@src/*": "./src/$1"
  },
  "scripts": {
    "build": "parcel build",
    "dev": "npx nodemon --watch src -e \".ts, .tsx\" --exec \"yarn run build && yalc push --changed --no-scripts\"",
    "watch": "parcel watch",
    "format": "prettier --write \"src/**/*.tsx\"",
    "start": "ladle serve"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@ladle/react": "^2.5.3",
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^17.0.9",
    "eslint": "^7.24.0",
    "parcel": "^2.8.3",
    "parcel-transformer-ts-css-modules": "^1.0.14",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
