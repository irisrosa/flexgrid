{
  "name": "flexgrid",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc && NODE_ENV=es babel src --out-dir \"dist\" --copy-files --no-copy-ignored --source-maps --extensions \".ts,.tsx\"",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "dev": "nodemon --watch src -e \".ts, .tsx\" --exec \"yarn run build && yalc push --changed --no-scripts\""
  },
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.12",
    "eslint": "^7.24.0",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.5",
    "rimraf": "^3.0.2",
    "storybook": "^6.3.7",
    "ts-jest": "^27.0.5",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "styled-components": "^5.2.3"
  }
}
