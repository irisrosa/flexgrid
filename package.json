{
  "name": "flexgrid",
  "version": "1.0.0",
  "module": "build/module.js",
  "types": "build/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "/build"
  ],
  "alias": {
    "@src/*": "./src/$1"
  },
  "scripts": {
    "build": "yarn cleanup && swc ./src -d build && yarn types",
    "build:parcel": "parcel build",
    "cleanup": "rimraf build",
    "types": "tsc --project tsconfig.json",
    "test": "jest",
    "dev": "npx nodemon --watch src -e \".ts, .tsx\" --exec \"yarn run build && yalc push --changed --no-scripts\"",
    "dev:parcel": "parcel watch",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 6006",
    "format": "prettier --write \"src/**/*.tsx\""
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-sass": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^17.0.9",
    "eslint": "^7.24.0",
    "parcel": "^2.8.3",
    "parcel-transformer-ts-css-modules": "^1.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "rambda": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
